<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AFStudiumApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AFStudiumApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarForegroundColor="Green"
    
    Title="AFStudiumApp">
    <Shell.TitleView>
        <HorizontalStackLayout BackgroundColor="White">
            <Image Source="unilogo.png" />
            
        </HorizontalStackLayout>
    </Shell.TitleView>
    <TabBar >
        <ShellContent
    Icon="study.png"
    
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />
        <ShellContent
Icon="email.png"
ContentTemplate="{DataTemplate local:MessagesPage}"
Route="MessagesPage" />
        <ShellContent
    Icon="nutzer.png"
    ContentTemplate="{DataTemplate local:ProfilePage}"
    Route="ProfilePage" />
    </TabBar>
    

</Shell>
