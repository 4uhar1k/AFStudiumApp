<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AFStudiumApp.TimeTablePage"
             Title="TimeTablePage">
    <VerticalStackLayout>
        <CarouselView  HeightRequest="300" ItemsSource="{Binding EventsOfWeekCollection}">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <CollectionView ItemsSource="{Binding .}">
                             <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label FontSize="30" Text="{Binding EventName}"/>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>                       
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </VerticalStackLayout>
</ContentPage>